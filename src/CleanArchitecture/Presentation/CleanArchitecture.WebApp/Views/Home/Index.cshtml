@inject IOptions<SystemConfig> SystemConfig;
@using CleanArchitecture.Domain.Consts
@model CleanArchitecture.WebApp.Models.Common.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- Page Header-->
<header class="masthead" style="background-image: url('/assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>@SystemConfig.Value.AppName</h1>
                    <span class="subheading">@SystemConfig.Value.AppSlogan</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <h1 style="margin-bottom: 72px;">Các bài viết mới nhất</h1>
            @foreach (var item in Model.LatestPosts)
            {
                <!-- Post preview-->
                <div class="post-preview">
                    <a href="@string.Format(UrlConsts.PostDetails, item.Slug)" title="@item.Name">
                        <h2 class="post-title">@item.Name</h2>
                        <h3 class="post-subtitle">@item.Description</h3>
                    </a>
                    <p class="post-meta">
                        Đăng bởi
                        <a href="@string.Format(UrlConsts.Author, item.AuthorUserName)">@item.AuthorFullName</a>
                        lúc @item.CreationTime.ToLongTimeString()
                    </p>
                </div>
                <!-- Divider-->
                <hr class="my-4"/>
            }
        </div>
    </div>
</div>